<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Atualizar Produto</title>
    <link rel="stylesheet" href="/css/registerProduct.css">
</head>
<body>
    <div class="form-container">
        <h1>Atualizar Produto</h1>

        <% if (successMsg) { %>
            <div id="success-msg" style="color: green; text-align: center; margin-bottom: 10px;">
                <%= successMsg %>
            </div>
        <% } %>

        <form action="/products/update/<%= product.id %>" method="post" enctype="multipart/form-data">
            <label for="name">Nome do Produto:</label>
            <input type="text" id="name" name="name" value="<%= product.name %>" required>
        
            <label for="description">Descrição:</label>
            <input type="text" id="description" name="description" value="<%= product.description %>" required>
        
            <label for="price">Preço:</label>
            <input type="number" id="price" name="price" step="0.01" value="<%= product.price %>" required>
        
            <label for="image">Imagem do Produto:</label>
            <input type="file" id="image" name="image" accept="image/*">
            <p>Imagem atual: <img src="<%= product.imageUrl %>" alt="Imagem do produto" style="max-width: 100px;"></p>
        
            <div class="form-buttons">
                <a href="/products/myProducts" class="text-link">Voltar</a>
                <button type="submit" class="btn-submit">Atualizar</button>
            </div>
        </form>
    </div>
</body>
</html>
