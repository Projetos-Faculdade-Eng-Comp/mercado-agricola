<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Meu Carrinho</title>
  <link id="main-styles" rel="stylesheet" href="/css/styles.css" />
  <link id="page-styles" rel="stylesheet" href="/css/cart.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body data-user-email="<%= user ? user.email : '' %>">
  <header>
    <nav class="navbar">
      <div class="logo">
        <a href="/">
          <img src="/images/logo.png" alt="Logo" class="logo-img">
        </a>
      </div>
      <ul class="nav-links">
        <li><a href="/producers">Explorar</a></li>
        <li><a href="#">Sobre</a></li>
        <li><a href="#">Contato</a></li>
      </ul>
      <div class="nav-icons">
        <a href="#" id="increase-font"><i class="fas fa-plus"></i></a>
        <a href="#" id="decrease-font"><i class="fas fa-minus"></i></a>
        <a href="#" id="toggle-style"><i class="fas fa-sync-alt"></i></a>
        <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
        <% if (!user) { %>
          <a href="/login"><i class="fas fa-user"></i></a>
        <% } else { %>
          <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
        <% } %>
      </div>
    </nav>
  </header>
  <main>
    <section class="cart-section">
      <h2>Meu Carrinho</h2>
      <div id="cart-items">
      </div>
    </section>
  </main>
  <footer class="footer">
    <p>&copy; 2024 Mercado agrícola. Todos os direitos reservados.</p>
  </footer>
  <script src="js/styleToggle.js"></script>
  <script src="js/fontSize.js"></script>
  <script src="/js/cart.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const userEmail = document.body.dataset.userEmail;

      if (userEmail) {
        fetch(`/cart/items?email=${userEmail}`)
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              const cartItemsDiv = document.getElementById('cart-items');

              if (data.cart.length === 0) {
                cartItemsDiv.innerHTML = "<p>Seu carrinho está vazio.</p>";
              } else {
                cartItemsDiv.innerHTML = data.cart.map(item => `
                  <div class="cart-item">
                    <p>${item.product}</p>
                    <p>R$ ${item.price}</p>
                  </div>
                `).join('');
              }
            } else {
              document.getElementById('cart-items').innerHTML = "<p>Erro ao carregar o carrinho.</p>";
            }
          })
          .catch((error) => {
            console.error("Erro:", error);
            document.getElementById('cart-items').innerHTML = "<p>Erro ao carregar o carrinho.</p>";
          });
      } else {
        document.getElementById('cart-items').innerHTML = "<p>Faça login para ver o carrinho.</p>";
      }
    });
  </script>
</body>
</html>
